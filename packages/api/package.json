{
  "name": "@intentvision/api",
  "version": "0.2.0",
  "description": "IntentVision Production API Server",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "dev:api": "FIRESTORE_EMULATOR_HOST=localhost:8081 tsx watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "seed:dev": "tsx src/scripts/seed-dev.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.4.0",
    "@libsql/client": "^0.14.0",
    "firebase-admin": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20"
  }
}
