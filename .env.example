# IntentVision Environment Configuration
# Copy to .env and fill in values

# Database Configuration
# Local development: file:db/intentvision.db
# Turso cloud: libsql://intentvision-<account>.turso.io
INTENTVISION_DB_URL=file:db/intentvision.db

# Turso authentication token (required for cloud database)
# Generate with: turso db tokens create intentvision
INTENTVISION_DB_AUTH_TOKEN=

# GCP Project (for Cloud Functions, Tasks, Storage)
GCP_PROJECT_ID=
GCP_REGION=us-central1

# Pipeline Configuration
PIPELINE_ORG_ID=org-demo
PIPELINE_FORECAST_HORIZON=6
PIPELINE_ALERT_THRESHOLD=80
PIPELINE_ANOMALY_SENSITIVITY=0.7
